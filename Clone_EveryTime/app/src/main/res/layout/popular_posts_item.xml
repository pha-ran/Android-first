<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/popular_posts_profileimage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_home_toolbar_person" />

        <TextView
            android:id="@+id/popular_posts_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:text="익명"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popular_posts_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="날짜"
            android:textColor="#ACACAC"/>

    </LinearLayout>

    <TextView
        android:id="@+id/popular_posts_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="내용"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:id="@+id/popular_posts_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="게시판"
            android:textColor="#ACACAC" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_home_fragment_home"
            android:layout_marginHorizontal="4dp" />

        <TextView
            android:id="@+id/popular_posts_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginHorizontal="4dp"
            android:textColor="#B71C1C"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_home_fragment_speaker"
            android:layout_marginHorizontal="4dp" />

        <TextView
            android:id="@+id/popular_posts_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginHorizontal="4dp"
            android:textColor="#0D47A1"/>
    </LinearLayout>
</LinearLayout>